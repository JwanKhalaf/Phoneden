@model Phoneden.ViewModels.PurchaseOrderInviocePaymentViewModel
  
@{
  ViewBag.Title = "Delete Payment";
}

<div class="page-title">
  <h3>Delete Payment</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="grid simple">
      <div class="grid-body no-border">
        <h2 class="all-caps">Delete <span class="semi-bold">Payment</span>?</h2>
        <p class="error">@ViewBag.ErrorMessage</p>

        <p>Are you sure you want to delete this payment?</p>

        <form asp-controller="PurchaseOrderPayment" asp-action="Delete" method="post" role="form">
          <input asp-for="Id" type="hidden" />
          <input asp-for="InvoiceId" type="hidden" />

          <div class="form-actions no-color">
            <input type="submit" value="Yes, Delete" class="btn btn-danger pull-right" />
            <a asp-action="Details" asp-controller="PurchaseOrderInvoice" asp-route-purchaseOrderInvoiceId="@Model.InvoiceId" class="btn btn-default pull-right">No, Go Back</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
