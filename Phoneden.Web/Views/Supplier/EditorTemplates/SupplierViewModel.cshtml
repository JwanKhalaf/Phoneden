@using Phoneden.ViewModels
@model Phoneden.ViewModels.SupplierViewModel

<form asp-controller="Supplier" asp-action="@(Model.Id == 0 ? "Create" : "Edit")" method="post" role="form">
  <div asp-validation-summary="All" class="text-danger"></div>

  @if (Model.Id != 0)
  {
    <input asp-for="Id" type="hidden" />
    <input asp-for="Addresses[0].Id" type="hidden" />
    <input asp-for="Addresses[0].BusinessId" type="hidden" />
    <input asp-for="Contacts[0].Id" type="hidden" />
    <input asp-for="Contacts[0].BusinessId" type="hidden" />
  }

  <div class="row">
    <div class="col-md-12">
      <div class="grid simple">
        <div class="grid-body no-border">
          <br>
          <div class="row">
            <div class="col-md-12">
              <h3 class="all-caps">
                <span class="semi-bold">General</span> Details
              </h3>
              <hr />
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <div class="controls">
                  <input asp-for="Name" class="form-control" />
                  <span asp-validation-for="Name" class="text-danger"></span>
                </div>
              </div>

              <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                <div class="controls">
                  <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                  <span asp-validation-for="Description" class="text-danger"></span>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label asp-for="Phone" class="form-label"></label>
                <div class="controls">
                  <input asp-for="Phone" class="form-control" />
                  <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
              </div>

              <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <div class="controls">
                  <input asp-for="Email" class="form-control" />
                  <span asp-validation-for="Email" class="text-danger"></span>
                </div>
              </div>

              <div class="form-group">
                <label asp-for="Website" class="form-label"></label>
                <div class="controls">
                  <input asp-for="Website" class="form-control" />
                  <span asp-validation-for="Website" class="text-danger"></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="grid simple">
        <div class="grid-body no-border">
          <br />
          <div class="row">
            <div class="col-md-12">
              <h3 class="all-caps">
                <span class="semi-bold">Primary</span> Address
              </h3>
              <hr />
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label asp-for="Addresses[0].AddressLine1" class="form-label"></label>
                <div class="controls">
                  <input asp-for="Addresses[0].AddressLine1" class="form-control" />
                  <span asp-validation-for="Addresses[0].AddressLine1" class="text-danger"></span>
                </div>
              </div>

              <div class="form-group">
                <label asp-for="Addresses[0].AddressLine2" class="form-label"></label>
                <div class="controls">
                  <input asp-for="Addresses[0].AddressLine2" class="form-control" />
                  <span asp-validation-for="Addresses[0].AddressLine2" class="text-danger"></span>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label asp-for="Addresses[0].Area" class="form-label"></label>
                    <div class="controls">
                      <input asp-for="Addresses[0].Area" class="form-control" />
                      <span asp-validation-for="Addresses[0].Area" class="text-danger"></span>
                    </div>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-group">
                    <label asp-for="Addresses[0].City" class="form-label"></label>
                    <div class="controls">
                      <input asp-for="Addresses[0].City" class="form-control" />
                      <span asp-validation-for="Addresses[0].City" class="text-danger"></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label asp-for="Addresses[0].County" class="form-label"></label>
                <div class="controls">
                  <input asp-for="Addresses[0].County" class="form-control" />
                  <span asp-validation-for="Addresses[0].County" class="text-danger"></span>
                </div>
              </div>

              <div class="form-group">
                <label asp-for="Addresses[0].PostCode" class="form-label"></label>
                <div class="controls">
                  <input asp-for="Addresses[0].PostCode" class="form-control" />
                  <span asp-validation-for="Addresses[0].PostCode" class="text-danger"></span>
                </div>
              </div>

              <div class="form-group">
                <label asp-for="Addresses[0].Country" class="form-label"></label>
                <div class="controls">
                  <input asp-for="Addresses[0].Country" class="form-control" />
                  <span asp-validation-for="Addresses[0].Country" class="text-danger"></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="grid simple">
        <div class="grid-body no-border">
          <br />
          <div class="row">
            <div class="col-md-12">
              <h3 class="all-caps">
                <span class="semi-bold">Main</span> Contact
              </h3>
              <hr />
            </div>

            <div class="col-md-6">
              <div class="row">
                <div class="col-md-2">
                  <div class="form-group">
                    <label asp-for="Contacts[0].Title" class="form-label"></label>
                    <div class="controls">
                      <input asp-for="Contacts[0].Title" class="form-control" />
                      <span asp-validation-for="Contacts[0].Title" class="text-danger"></span>
                    </div>
                  </div>
                </div>
                <div class="col-md-5">
                  <div class="form-group">
                    <label asp-for="Contacts[0].FirstName" class="form-label"></label>
                    <div class="controls">
                      <input asp-for="Contacts[0].FirstName" class="form-control" />
                      <span asp-validation-for="Contacts[0].FirstName" class="text-danger"></span>
                    </div>
                  </div>
                </div>
                <div class="col-md-5">
                  <div class="form-group">
                    <label asp-for="Contacts[0].LastName" class="form-label"></label>
                    <div class="controls">
                      <input asp-for="Contacts[0].LastName" class="form-control" />
                      <span asp-validation-for="Contacts[0].LastName" class="text-danger"></span>
                    </div>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label asp-for="Contacts[0].Email" class="form-label"></label>
                <div class="controls">
                  <input asp-for="Contacts[0].Email" class="form-control" />
                  <span asp-validation-for="Contacts[0].Email" class="text-danger"></span>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label asp-for="Contacts[0].Department" class="form-label"></label>
                <div class="controls">
                  <input asp-for="Contacts[0].Department" class="form-control" />
                  <span asp-validation-for="Contacts[0].Department" class="text-danger"></span>
                </div>
              </div>

              <div class="form-group">
                <label asp-for="Contacts[0].Phone" class="form-label"></label>
                <div class="controls">
                  <input asp-for="Contacts[0].Phone" class="form-control" />
                  <span asp-validation-for="Contacts[0].Phone" class="text-danger"></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <input type="submit" value="@Model.ButtonText" class="btn btn-primary pull-right" />
      <a asp-controller="Supplier"
         asp-action="page"
         asp-route-showDeleted="false"
         class="btn btn-default pull-right">
        Back to Suppliers
      </a>
    </div>
  </div>
</form>
