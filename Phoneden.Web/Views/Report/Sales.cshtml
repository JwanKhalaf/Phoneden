@using Phoneden.ViewModels
@model Phoneden.ViewModels.SalesReportViewModel

@{
  ViewBag.Title = "Customer Orders";
}

<div class="page-title">
  <h3>Customer Orders</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="grid simple">
      <div class="grid-body no-border">
        <br>
        <div class="row">
          <div class="col-md-12">
            <h3 class="all-caps">
              <span class="semi-bold">Filter</span> Results
            </h3>
            <hr />
          </div>
        </div>
        <form asp-controller="Report" asp-action="Sales" method="post" role="form">
          <div asp-validation-summary="All" class="text-danger"></div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label asp-for="StartDate" class="form-label"></label>
                <div class="controls">
                  <input asp-for="StartDate" class="form-control" />
                  <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label asp-for="EndDate" class="form-label"></label>
                <div class="controls">
                  <input asp-for="EndDate" class="form-control" />
                  <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
              </div>
            </div>
            <div class="col-md-12">
              <button type="submit" class="btn btn-primary pull-right filter">Update Results</button>
              <a asp-controller="Report" asp-action="Sales" class="btn btn-default pull-right">Reset</a>
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="grid simple">
      <div class="grid-body no-border">
        <table class="table table-striped table-flip-scroll cf">
          <thead class="cf">
            <tr>
              <th>
                Id
              </th>
              <th>
                Customer
              </th>
              <th>
                Status
              </th>
              <th>
                Profit
              </th>
              <th>
                Is Invoiced
              </th>
              <th>
                Date
              </th>
              <th>
                Order Total
              </th>
            </tr>
          </thead>
          <tbody>
            @if (Model.SaleOrders != null && Model.SaleOrders.Any())
            {
              foreach (var saleOrder in Model.SaleOrders)
              {
                <tr>
                  <td>
                    @saleOrder.Id
                  </td>
                  <td>
                    @saleOrder.CustomerName
                  </td>
                  <td>
                    @saleOrder.Status
                  </td>
                  <td>
                    @saleOrder.Profit.ToString("C", CultureInfo.CreateSpecificCulture("en-GB"))
                  </td>
                  <td>
                    @if (saleOrder.IsInvoiced)
                    {
                      <span class="label label-success">INVOICED</span>
                    }
                    else
                    {
                      <span class="label label-inverse">NOT INVOICED</span>
                    }
                  </td>
                  <td>
                    @string.Format("{0:dd MMM yyyy}", saleOrder.Date)
                  </td>
                  <td>
                    @saleOrder.CalculateSaleOrderTotal().ToString("C", CultureInfo.CreateSpecificCulture("en-GB"))
                  </td>
                </tr>
              }
            }
            else
            {
              <tr>
                <td colspan="7">
                  <div class="alert alert-warning">
                    <p>There are no sale orders for the dates specified</p>
                  </div>
                </td>
              </tr>
            }
          </tbody>
        </table>
        @if (Model.Pagination != null)
        {
          <cs-pager cs-paging-pagesize="10"
                    cs-paging-pagenumber="@Model.Pagination.CurrentPage"
                    cs-paging-totalitems="@Model.Pagination.TotalRecords"
                    cs-pagenumber-param="page"
                    asp-controller="Report"
                    asp-action="Sales">
          </cs-pager>
          <input asp-for="Pagination.CurrentPage" type="hidden"/>
        }

        <table class="table">
          <tr>
            <td><h3 class="all-caps"><strong>Total Sales</strong></h3></td>
            <td>
              <h3>
                @Model.Total.ToString("C", CultureInfo.CreateSpecificCulture("en-GB"))
              </h3>
            </td>
          </tr>
          <tr>
            <td><h3 class="all-caps"><strong>Total Profit</strong></h3></td>
            <td>
              <h3>
                @Model.Profit.ToString("C", CultureInfo.CreateSpecificCulture("en-GB"))
              </h3>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
