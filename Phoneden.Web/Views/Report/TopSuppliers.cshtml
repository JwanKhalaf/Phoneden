@using Phoneden.ViewModels
@model IEnumerable<Phoneden.ViewModels.SupplierViewModel>

@{
  ViewBag.Title = "Your Suppliers";
}

<div class="page-title">
  <h3>Top 10 Suppliers</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="grid simple">
      <div class="grid-body no-border">
        <table class="table table-striped table-flip-scroll cf">
          <thead class="cf">
            <tr>
              <th>
                Name
              </th>
              <th>
                Email
              </th>
              <th>
                Phone
              </th>
            </tr>
          </thead>
          <tbody>
            @foreach (var supplier in Model)
            {
              <tr>
                <td>
                  @supplier.Name
                </td>
                <td>
                  @supplier.Email
                </td>
                <td>
                  @supplier.Phone
                </td>
                <td>
                  <a asp-controller="Supplier"
                     asp-action="Details"
                     asp-route-id="@supplier.Id"
                     class="btn btn-mini btn-success pull-right">
                    View
                  </a>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
