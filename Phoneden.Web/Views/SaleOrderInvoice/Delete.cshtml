@model Phoneden.ViewModels.SaleOrderInvoiceViewModel

@{
  ViewBag.Title = "Delete Invoice #" + Model.Id;
}

<div class="page-title">
  <h3>Delete Invoice</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="grid simple">
      <div class="grid-body no-border">
        <h2 class="all-caps">Delete Invoice <span class="semi-bold">#@Model.Id</span>?</h2>
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
          <div class="alert alert-block alert-error fade in">
            <h4 class="alert-heading">Sorry!</h4>
            <p>@ViewBag.ErrorMessage</p>
          </div>
        }
        else
        {
          <p>Are you sure you want to delete Invoice #@Model.Id?</p>
        }
      </div>
    </div>
  </div>

  <div class="col-md-12">
    @if (string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
      using (Html.BeginForm())
      {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.Id)

        <input type="submit" value="Yes, Delete" class="btn btn-danger pull-right" />

        @Html.ActionLink("No, Go Back", "Page", new { showDeleted = false }, new { @class = "btn btn-default pull-right", style = "margin-right: 5px" })
      }
    }
    else
    {
      @Html.ActionLink("Ok, Go Back", "Page", new { showDeleted = false }, new { @class = "btn btn-default pull-right" })
    }
  </div>
</div>
