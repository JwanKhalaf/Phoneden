@using Phoneden.ViewModels
@model Phoneden.ViewModels.ContactViewModel

<form asp-controller="Contact" asp-action="@(Model.Id == 0 ? "Create" : "Edit")" method="post" role="form">
  <div asp-validation-summary="All" class="text-danger"></div>

  <input asp-for="IsSupplierContact" type="hidden" />

  @if (Model.Id != 0)
  {
    <input asp-for="Id" type="hidden" />
  }

  @if (Model.BusinessId != 0)
  {
    <input asp-for="BusinessId" type="hidden" />
  }

  <div class="row">
    <div class="col-md-12">
      <div class="grid simple">
        <div class="grid-body no-border">
          <br />
          <div class="row">
            <div class="col-md-12">
              <h3 class="all-caps">
                <span class="semi-bold">Main</span> Contact
              </h3>
              <hr />
            </div>

            <div class="col-md-6">
              <div class="row">
                <div class="col-md-2">
                  <div class="form-group">
                    <label asp-for="Title" class="form-label"></label>
                    <div class="controls">
                      <input asp-for="Title" class="form-control" />
                      <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                  </div>
                </div>
                <div class="col-md-5">
                  <div class="form-group">
                    <label asp-for="FirstName" class="form-label"></label>
                    <div class="controls">
                      <input asp-for="FirstName" class="form-control" />
                      <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                  </div>
                </div>
                <div class="col-md-5">
                  <div class="form-group">
                    <label asp-for="LastName" class="form-label"></label>
                    <div class="controls">
                      <input asp-for="LastName" class="form-control" />
                      <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <div class="controls">
                  <input asp-for="Email" class="form-control" />
                  <span asp-validation-for="Email" class="text-danger"></span>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label asp-for="Department" class="form-label"></label>
                <div class="controls">
                  <input asp-for="Department" class="form-control" />
                  <span asp-validation-for="Department" class="text-danger"></span>
                </div>
              </div>

              <div class="form-group">
                <label asp-for="Phone" class="form-label"></label>
                <div class="controls">
                  <input asp-for="Phone" class="form-control" />
                  <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <input type="submit" value="@Model.ButtonText" class="btn btn-primary pull-right" />
    </div>
  </div>
</form>
