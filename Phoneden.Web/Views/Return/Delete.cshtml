@model Phoneden.ViewModels.SaleOrderReturnViewModel

@{
  ViewBag.Title = "Delete Return On Invoice #" + Model.InvoiceId;
}

<div class="page-title">
  <h3>Delete Return</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="grid simple">
      <div class="grid-body no-border">
        <h2 class="all-caps">Delete Return on Invoice <span class="semi-bold">#@Model.InvoiceId</span>?</h2>
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
          <div class="alert alert-block alert-error fade in">
            <h4 class="alert-heading">Sorry!</h4>
            <p>@ViewBag.ErrorMessage</p>
          </div>
        }
        else
        {
          <p>Are you sure you want to delete this return on Invoice #@Model.InvoiceId?</p>
        }
      </div>
    </div>
  </div>

  <div class="col-md-12">
    @if (string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
      <form asp-controller="Return" asp-action="Delete" method="post" role="form">
        <input asp-for="Id" type="hidden" />

        <input asp-for="InvoiceId" type="hidden" />

        <input type="submit" value="Yes, Delete" class="btn btn-danger pull-right" />

        <a asp-controller="SaleOrderInvoice"
           asp-action="Details"
           asp-route-id="@Model.InvoiceId"
           class="btn btn-default pull-right">
          No, Go Back
        </a>
      </form>
    }
    else
    {
      <a asp-controller="SaleOrderInvoice"
         asp-action="Details"
         asp-route-id="@Model.InvoiceId"
         class="btn btn-default pull-right">
        Ok, Go Back
      </a>
    }
  </div>
</div>
